{
  "manifest_version": 3,
  "name": "Notion Do Not Disturb",
  "version": "0.0.1",
  "description": "Hide notification icons in Notion for better focus",
  "permissions": [
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://*.notion.so/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.notion.so/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}